{% extends "base.twig" %}
{% block content %}
  <article class="content">
    <p><strong>Total posts:</strong> {{ posts.found_posts }}</p>
    <table class="posts">
      <tr>
        <th>Name</th>
        <th>Last Modified</th>
        <th>Date Created</th>
        <th>Author</th>
      </tr>
      {% for post in posts %}
        <tr>
          <td><a href="{{ post.link }}">{{ post.title }}</a></td>
          <td>{{ post.modified_date }}</td>
          <td>{{ post.date }}</td>
          <td>{{ post.author }}</td>
        </tr>
      {% endfor %}
    </table>
  </article>
{% endblock content %}
