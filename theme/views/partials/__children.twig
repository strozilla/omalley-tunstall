<div x-show="isExpanded" class="items children w-full transition-all duration-1000" x-cloak x-collapse.transition.in.duration.1000.out.duration.1000.>
  {% for item in items %}
    <div x-data="{ isExpanded: false, isClicked: false }" class="child-item items-center w-full">
      <a class="flex no-underline" :class="isExpanded ? 'text-primary' : 'text-white'" href="{{ item.link }}">{{ item.title }}
      {% if item.children is not empty %}
      <button @click.prevent="isExpanded = !isExpanded, isClicked = true" class="expand ml-auto">
        <svg x-show="!isExpanded" :class="{ 'animate-rotateClosed': isClicked }" class="transition-all duration-1000" stroke="currentColor" fill="currentColor" stroke-width="0" viewBox="0 0 448 512" height=".75em" width=".75em" xmlns="http://www.w3.org/2000/svg"><path d="M416 208H272V64c0-17.67-14.33-32-32-32h-32c-17.67 0-32 14.33-32 32v144H32c-17.67 0-32 14.33-32 32v32c0 17.67 14.33 32 32 32h144v144c0 17.67 14.33 32 32 32h32c17.67 0 32-14.33 32-32V304h144c17.67 0 32-14.33 32-32v-32c0-17.67-14.33-32-32-32z"></path></svg>
        <svg x-show="isExpanded" :class="{ 'animate-rotateOpen': isExpanded }" class="transition-all duration-1000" stroke="currentColor" fill="currentColor" stroke-width="0" viewBox="0 0 448 512" height=".75em" width=".75em" xmlns="http://www.w3.org/2000/svg"><path d="M416 208H32c-17.67 0-32 14.33-32 32v32c0 17.67 14.33 32 32 32h384c17.67 0 32-14.33 32-32v-32c0-17.67-14.33-32-32-32z"></path></svg>
      </button>
      {% include "/partials/__children.twig" with {items: item.children} %}
      {% endif %}
      </a>
    </div>
  {% endfor %}
</div>
