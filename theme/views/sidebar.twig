
<div class="sidebar">
  <div class="sidebar-contact py-12 px-6 bg-eg-darkblue text-white border-[6px] border-primary box-border">
    <h3 class="font-semibold text-4xl text-primary text-center m-auto pb-4">Contact Us</h3>
    <span class="block text-2xl text-center mb-8 leading-8">Let Us Help! Call us at <a href="tel:9192770150" target="_blank" class="text-white no-underline">(919) 277-0150</a> or fill out this quick form and we will contact you within 24 hours!</span>
    {% apply shortcodes %}
    [contact-form-7 id="d6da8c1" title="Contact form 1"]
    {% endapply %}
  </div>
  {% if show_latest_posts %}
  <div class="sidebar-latest-news">
    <h3 class="m-auto mt-8 mb-4 font-bold text-4xl text-black text-center">Latest News</h3>
      {% for post in posts  %}
        {% include 'sidebar-news.twig' %}
      {% endfor %}
  </div>
  {% endif %}
  <div class="sidebar-reviews">
    <h3 class="m-auto mb-8 font-bold text-4xl text-black text-center">Testimonial</h3>
    <div class="side-test-container border-[6px] border-primary box-border bg-[#263264] bg-[url('/wp-content/uploads/2025/01/fr-background.webp')] text-white py-10 px-6">
      {% apply shortcodes %}
      [trustindex data-widget-id=8b2d7593936b87901a361a47f21]
      {% endapply %}
      <a href="/testimonials/" class="flex items-center justify-center w-fit m-auto py-2 px-6 bg-gray font-playfair font-bold text-white rounded-full uppercase no-underline">Read More Reviews</a>
    </div>
  </div>
</div>
