<div class="{{ classes }} intro-heading {% if fields.max_width %}{% for width in fields.max_width %}{{ width }}{% endfor %}{% else %}w-full{% endif %} mt-0 pb-8 {{ fields.placement }} {{ fields.heading_color }}">
  {% if fields.section_title %}
    <span class="{{ fields.title_color }}">{{ fields.section_title }}</span>
  {% endif %}
  {{ fields.heading }}
  {% if fields.icon %}
  <span class="icon w-fit">
    <img src="{{ fields.icon }}" alt="{{ fields.icon.title }}" width="25" height="25">
  </span>
  {% endif %}
</div>
