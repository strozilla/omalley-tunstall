{% set args = {
    'post_type': 'post',
    'posts_per_page': 2,
    'orderby': 'date',
    'order': 'DESC'
} %}

{% set posts = Post(args) %}

<div class="max-w-[37rem] flex flex-col h-auto gap-y-8 lg:max-w-full lg:flex-row lg:gap-x-12">
  {% for post in posts %}
  <div class="home-latest-news-container flex flex-1 lg:basis-1/2">
    <div class="flex flex-col gap-y-4 w-full">
      <div class="flex flex-col items-start border-t-[6px] border-black">
        <span class="pt-4"><a href="{{ post.link }}" class="font-popp font-semibold text-3xl text-black no-underline">{{ post.title }}</a></span>
        <span class="flex items-center gap-4 text-sm">
          <svg stroke="currentColor" fill="currentColor" stroke-width="0" viewBox="0 0 16 16" height="1em" width="1em" xmlns="http://www.w3.org/2000/svg">
            <path d="M3.5 0a.5.5 0 0 1 .5.5V1h8V.5a.5.5 0 0 1 1 0V1h1a2 2 0 0 1 2 2v11a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V3a2 2 0 0 1 2-2h1V.5a.5.5 0 0 1 .5-.5zM2 2a1 1 0 0 0-1 1v1h14V3a1 1 0 0 0-1-1H2zm13 3H1v9a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1V5z"></path><path d="M11 7.5a.5.5 0 0 1 .5-.5h1a.5.5 0 0 1 .5.5v1a.5.5 0 0 1-.5.5h-1a.5.5 0 0 1-.5-.5v-1z"></path>
          </svg>
          {{ post.date }}
        </span>
      </div>
      <div class="relative flex-1 min-h-[300px] overflow-hidden">
        <img class="absolute inset-0 w-full h-full object-cover" src="{{ post.thumbnail.src }}" alt="{{ post.thumbnail.alt }}" />
      </div>
    </div>
  </div>
  {% endfor %}
</div>
